<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/issue_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_fish" />

    <ImageView
        android:id="@+id/issue_name_image"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_toRightOf="@+id/issue_image"
        android:gravity="left|center_vertical"
        android:text="Posted from 20910, Silver Spring by Royce"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/issue_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/issue_name_image"
        android:layout_alignTop="@+id/issue_name_image"
        android:layout_toRightOf="@+id/issue_name_image"
        android:text="Royce Raju"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/issue_place_image"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_place_black_24dp"
        android:layout_below="@+id/issue_name_image"
        android:layout_toRightOf="@+id/issue_image"
        android:gravity="left|center_vertical"
        android:text="Posted from 20910, Silver Spring by Royce"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/issue_place"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/issue_place_image"
        android:layout_alignTop="@+id/issue_place_image"
        android:layout_toRightOf="@+id/issue_place_image"
        android:text="Silver Spring"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/issue_desc"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/issue_image"
        android:layout_below="@+id/issue_place"
        android:text="Silver Spring"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp" />

</RelativeLayout>