<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="white_text_heading" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="white_text_body" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_sixteen</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="white_text_body.title_text_body">
        <item name="android:textColor">@color/small_title_text</item>
        <item name="android:textSize">@dimen/font_twenty</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="small_title_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/small_title_text</item>
        <item name="android:textSize">@dimen/font_fourteen</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="small_view_more_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/small_view_more_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_box" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/search_text</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/search_box_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/search_box_padding_vertical</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="GreyText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/title_text</item>
    </style>

    <dimen name="search_box_padding_vertical">16dp</dimen>
</resources>
